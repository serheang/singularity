bootstrap: docker
from:ubuntu:latest

%labels
  MAINTAINER setan

%environment
  export PATH=/usr/local/bin:$PATH

%post
  apt-get update -y
  apt-get install -y wget
  apt-get install -y libxext6 libxrender1 libxtst6 libxi6 libfreetype6 
  apt-get install -y python3 python3-pip 
  apt-get install -y virt-manager
  apt-get clean

%runscript
  virt-manager

